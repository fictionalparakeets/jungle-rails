<h1>Login</h1>

<br>
<%= form_tag '/login' do %>

  <form class="login-form">

  <div class="form-group">
    Email:
    <br>
    <%= text_field_tag :email %>
  </div>

  <div class="form-group">
    Password:
    <br>
    <%= password_field_tag :password %>
  </div>

  <%= submit_tag "Submit", class: 'btn btn-info' %>

  </form>
<% end %>
